{
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"skipLibCheck": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": false,
		"importHelpers": true,
		"types": [
			"node"
		],
		"paths": {
			"@/*": [
			 	"*"
			]
		},
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"esm": true,
	}
}